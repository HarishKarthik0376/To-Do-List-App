<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="190dp"
        android:elevation="12dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#D9DAD9"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_delete_24"
            android:layout_gravity="right"
            android:layout_marginTop="1.4dp"
            android:layout_marginRight="2dp"
            android:id="@+id/otherdeleteicon"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/baseline_date_range_24"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_circle_24"
            android:layout_margin="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textSize="29sp"
            android:textColor="#4c8055"
            android:textStyle="bold"
            android:maxHeight="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/othercardtaskname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Task Content"
            android:textSize="25sp"
            android:id="@+id/othercardcontent"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:maxWidth="320dp"
            android:textStyle="bold"
            android:maxHeight="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_gravity="bottom"
            android:textSize="23sp"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/othercarddate"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/clockkkkk"
            android:layout_marginRight="75dp"
            android:background="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="7dp"
            android:text="Time"
            android:id="@+id/othercardtime"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23sp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>