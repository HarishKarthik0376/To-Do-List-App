<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/addtaskcardview"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:backgroundTint="#0C0D0D"
        app:cardCornerRadius="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="New Task"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cardviewtasknameenter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/textfields"
            android:ems="13"
            android:hint="Enter Task Name"
            android:maxHeight="40dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/cardviewtaskcontenteenter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/textfields"
            android:ems="13"
            android:hint="Enter Task Content"
            android:maxHeight="60dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/datebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/logout"
            android:hint="Choose Date"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp"
            app:backgroundTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/timebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/logout"
            android:hint="Choose Time"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:backgroundTint="@color/white" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60dp"
            android:text="Priority"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:checked="false"
            android:textStyle="bold"
            app:buttonTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addtaskbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/logout"
            android:text="Add Task"
            android:textColor="@color/white"
            app:backgroundTint="#1B1924" />

    </androidx.cardview.widget.CardView>

</LinearLayout>